<h1>Burger Time!</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm">
      <header class="d-flex align-items-center text-center flex-column">
        <img id="hamburger" src="/assets/img/burger.png">


        <h5>Add a new burger<h5>
            <form class="create-form">
              <div class="form-group">
                <label for="bu">Burger Name:</label>
                <input type="text" id="bu" name="name">
              </div>
              <button type="submit" id="submitBtn">Submit</button>
            </form>

      </header>
    </div>
  </div>
  <br>


  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3 text-center">
      <h2>Burgers to devour!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-sm-3 text-center">
      <h2>Devoured burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}

        <li> {{burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>
    </div>